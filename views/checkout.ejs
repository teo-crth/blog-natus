        <input type="password" name="password" id="password" placeholder="Eviter toto" required>

        <label for="passwordConfirm">Confirmation du Mot de passe</label>
        <input type="password" name="passwordConfirm" id="passwordConfirm" placeholder="Eviter tati" required>

        <input type="submit" value="S'inscrire">
    </form>
</main>
