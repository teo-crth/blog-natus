<%- include('partials/header') %>
<main>
    <h2 class="title-contact">CONTACT</h2>

    <form class="contact-form" action="/contact" method="post">
        <fieldset class="form_fieldset">
            <legend class="form-legend">Renseigner les informations</legend>
            <div class="form-champs">
                 <label class="form-label"  for="nom">*Nom & Pr√©nom :</label>  
                 <input class="form-input" type="text" name="nom" id="nom" placeholder="Paul Martin" class="champsForm" required>
            </div>
            <div class="form-champs">
                 <label class="form-label" for="email">*Email :</label>  
                 <input class="form-input" type="email" name="email" id="email" placeholder="paul.martin@gmail.com" class="champsForm" required>
            </div>
            <div class="form-champs">
               <label class="form-label"  for="objet">Objet :</label>    
               <textarea class="form-textarea" name="objet" id="objet" cols="30" rows="5" placeholder="Objet du mail" class="champsForm"></textarea>
          </div>
            <div class="form-champs">
                 <label class="form-label"  for="message">Message :</label>    
                 <textarea class="form-textarea" name="message" id="message" cols="30" rows="5" placeholder="Ecrivez votre message ici" class="champsForm" required></textarea>
            </div>
            <div id="form__button__container">
                 <button type="submit" name="Envoyer" id="submit" class="buttonContact">Envoyer</button>
            </div>
        </fieldset>
    </form>
</main>
<%- include('partials/footer') %>